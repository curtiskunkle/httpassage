{
    "name": "ckunkle/quick-router",
    "description": "A simple, flexible library for routing and processing PSR-7 messages",
    "type": "library",
    "autoload": {
        "psr-4": {
            "QuickRouter\\CallbackHandler\\": "./src/callbackhandlers",
            "QuickRouter\\Middleware\\": "./src/middleware",
            "QuickRouter\\": "./src"
        }
    },
    "require": {
        "php": ">=7",
    	"altorouter/altorouter": "1.1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "guzzlehttp/psr7": "^1.7"
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --testsuite \"all\"",
        "build": "docker build -t quick-router-test-image .",
        "up": "docker run -i -d -v C:/wamp/www/quick-router:/usr/src/quickrouter --rm --name quick_router_test quick-router-test-image",
        "down": "docker stop quick_router_test",
        "testimage": "docker exec quick_router_test composer test"
    }
}
