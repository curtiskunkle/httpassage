{
    "name": "curtiskunkle/quick-router",
    "description": "A tiny library for routing and processing HTTP requests",
    "type": "library",
    "autoload": {
        "psr-4": {
            "QuickRouter\\Middleware\\": "./src/middleware",
            "QuickRouter\\": "./src"
        }
    },
    "require": {
        "php": ">=5.6",
    	"altorouter/altorouter": "1.1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "guzzlehttp/psr7": "^1.7"
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --testsuite \"all\"",
        "buildimage": "docker build -t quick-router-test-image .",
        "runimage": "docker run -t -d --rm --name quick_router_test quick-router-test-image",
        "stopimage": "docker run -t -d --rm --name quick_router_test quick-router-test-image",
        "testimage": "docker exec quick_router_test composer test"
    }
}
