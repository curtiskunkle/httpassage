{
    "name": "ckunkle/httpassage",
    "description": "A simple, flexible library for routing and processing PSR-7 messages",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HTTPassage\\CallbackHandler\\": "./src/callbackhandlers",
            "HTTPassage\\Middleware\\": "./src/middleware",
            "HTTPassage\\": "./src"
        }
    },
    "require": {
        "php": ">=7",
    	"altorouter/altorouter": "^2",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "guzzlehttp/psr7": "^1.7"
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --testsuite \"all\""
    },
    "keywords": ["http", "route", "routing", "router", "psr", "psr7", "psr15", "psr-7", "psr-15"]
}
